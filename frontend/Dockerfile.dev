FROM node:20-alpine

WORKDIR /app

# Install dependencies for hot reload
RUN apk add --no-cache libc6-compat

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Create next.js cache directory
RUN mkdir -p .next

# Expose port
EXPOSE 3000

# Enable hot reload
ENV WATCHPACK_POLLING=true
ENV NEXT_TELEMETRY_DISABLED=1

# Start development server
CMD ["npm", "run", "dev"]